<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_loading"
        android:layout_width="@dimen/view_xxlarge"
        android:layout_height="@dimen/view_xxlarge"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_all_medium"
        android:layout_marginTop="@dimen/spacing_all_small"
        android:scaleType="centerInside"
        app:lottie_fileName="lottie_animations/hero_loading.json"
        app:lottie_loop="false" />

</FrameLayout>
