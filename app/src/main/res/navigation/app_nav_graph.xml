<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/heroListFragment">

    <fragment
        android:id="@+id/heroListFragment"
        android:name="com.nerdcutlet.depop.presentation.herolist.ProductListFragment"
        android:label="fragment_hero_list"
        tools:layout="@layout/fragment_product_list" >
        <action
            android:id="@+id/actionHeroListToHeroDetail"
            app:destination="@id/heroDetailFragment" />
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/heroDetailFragment"
        android:name="com.nerdcutlet.depop.presentation.herodetail.ProductDetailFragment"
        android:label="fragment_hero_detail"
        tools:layout="@layout/fragment_product_detail" >
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
</navigation>